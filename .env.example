# Server Configuration
PORT=3017
RUST_LOG=chunker=info,tower_http=debug

# Chunking Defaults
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MIN_CHARS_PER_SENTENCE=12

# =============================================================================
# Downstream Services (configurable for cloud deployment)
# =============================================================================
# Embedding service for vector embeddings
EMBEDDING_SERVICE_URL=http://localhost:8082

# Relation Graph service for knowledge graph construction
RELATION_GRAPH_SERVICE_URL=http://localhost:3018

# =============================================================================
# Processing Configuration
# =============================================================================
MAX_CONCURRENT_JOBS=10
ACTIVE_PROFILE=default

# =============================================================================
# Database (Neon PostgreSQL - for job persistence)
# =============================================================================
# DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# =============================================================================
# Redis (for caching chunked content)
# =============================================================================
# REDIS_URL=rediss://user:password@host:port
